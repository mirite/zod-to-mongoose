{
	"name": "@mirite/zod-to-mongoose",
	"version": "0.4.0",
	"description": "Package for creating mongoose schemas out of Zod schemas for type safety, and removing duplicate effort.",
	"keywords": [
		"zod",
		"mongoose",
		"schema",
		"type",
		"type-safe"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mirite/zod-to-mongoose.git"
	},
	"license": "MIT",
	"author": {
		"name": "Jesse Conner",
		"email": "me@jesseconner.ca",
		"url": "https://jesseconner.ca"
	},
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rimraf dist & yarn run build:esm & yarn run build:cjs & yarn run build:types",
		"build:esm": "swc src -d dist -C module.type=es6 --out-file-extension js --strip-leading-paths",
		"build:cjs": "swc src -d dist -C module.type=commonjs --out-file-extension cjs --strip-leading-paths",
		"build:types": "tsc -p tsconfig.build.json",
		"check": "tsc --noEmit",
		"format": "prettier --write --cache .",
		"lint": "eslint --fix --cache",
		"release": "yarn build && npm publish",
		"test": "vitest --run --coverage",
		"test:watch": "vitest --ui --coverage"
	},
	"devDependencies": {
		"@microsoft/api-extractor": "^7.55.0",
		"@mirite/eslint-config-mirite": "^1.3.3",
		"@swc/cli": "^0.6.0",
		"@swc/core": "^1.10.18",
		"@vitest/coverage-v8": "^4.0.12",
		"@vitest/ui": "^4.0.12",
		"eslint": "^9.39.1",
		"mongoose": "^8.20.0",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.12",
		"zod": "^4.1.12"
	},
	"peerDependencies": {
		"mongoose": "^8",
		"zod": "^4"
	},
	"packageManager": "yarn@4.11.0",
	"issues": "https://github.com/mirite/zod-to-mongoose/issues"
}